# Maple Mover - Production Environment Configuration
# Copy this to .env for production deployment

# =============================================================================
# APP CONFIGURATION
# =============================================================================
APP_NAME="Maple Mover"
APP_DESCRIPTION="Real-time TTC transit information with smart location detection"
APP_VERSION="1.0.0"
APP_ENVIRONMENT="production"

# =============================================================================
# API CONFIGURATION
# =============================================================================
TTC_API_URL=https://myttc.ca
API_TIMEOUT=10
API_RATE_LIMIT=0.5
API_MAX_RETRIES=3
API_RETRY_DELAY=1

# =============================================================================
# LOCATION CONFIGURATION
# =============================================================================
DEFAULT_LOCATION_LAT=43.6532
DEFAULT_LOCATION_LON=-79.3832
DEFAULT_LOCATION_NAME="Downtown Toronto"

# Toronto bounds for validation
TORONTO_MIN_LAT=43.5
TORONTO_MAX_LAT=43.9
TORONTO_MIN_LON=-79.8
TORONTO_MAX_LON=-79.0

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
CACHE_DURATION=30
MAX_STATIONS=5
MAX_ARRIVALS=3
MAX_TRANSIT_OPTIONS=50

# =============================================================================
# STREAMLIT CONFIGURATION
# =============================================================================
STREAMLIT_SERVER_PORT=8500
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false
STREAMLIT_SERVER_ENABLE_CORS=false
STREAMLIT_SERVER_ENABLE_XSRF_PROTECTION=true

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
SECRET_KEY=your_secret_key_here_change_in_production
ALLOWED_HOSTS=localhost,127.0.0.1
DEBUG=false

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=maple_mover.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
ENABLE_MONITORING=true
MONITORING_INTERVAL=60
HEALTH_CHECK_INTERVAL=30

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_GEOLOCATION=true
ENABLE_CACHING=true
ENABLE_RATE_LIMITING=true
ENABLE_ERROR_REPORTING=true
ENABLE_ANALYTICS=false

# =============================================================================
# EXTERNAL SERVICES (Optional)
# =============================================================================
# Mapbox token for enhanced map visualization (optional)
MAPBOX_TOKEN=your_mapbox_access_token_here

# Weather API (for future weather integration)
WEATHER_API_KEY=your_weather_api_key_here
WEATHER_API_URL=https://api.openweathermap.org/data/2.5/weather

# Analytics (for future analytics integration)
GOOGLE_ANALYTICS_ID=your_ga_id_here
ENABLE_GOOGLE_ANALYTICS=false
